-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: ("hilite" if @selected == :title)}= link_to "Movie Title", movies_path(selected: :title), {id: :title_header}
      %th Rating
      %th{class: ("hilite" if @selected == :release_date)}= link_to "Release Date", movies_path(selected: :release_date), {id: :release_date_header}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
        
= link_to 'Add new movie', new_movie_path

-#%p= Movie.column_names.include? @selected.to_s

-#%p=params[:selected] 